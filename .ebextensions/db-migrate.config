# .ebextensions/django.config

container_commands:
  01_migrate:
    command: "source /var/app/env/*/bin/activate && python3 manage.py migrate"
    leader_only: true

  02_createsuperuser:
    command: |
      source /var/app/env/*/bin/activate && \
      echo \"from accounts.models import Account; \
      Account.objects.filter(email='eddo@gmail.com').exists() or \
      Account.objects.create_superuser('eddo', 'mpundu', 'eddo@gmail.com', 'eddo@', 'paul92+-')\" | python manage.py shell
    leader_only: true

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: billy_online_store.settings
